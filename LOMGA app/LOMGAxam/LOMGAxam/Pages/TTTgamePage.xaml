<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOMGAxam.Pages.TTTgamePage">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="WhiteSmoke" x:Name="allPage" Opacity="0">
            <Label
                x:Name="label"
                Text="Your turn"
                TextColor="#666"
                FontSize="50"
                AbsoluteLayout.LayoutBounds="0.5, 0.06"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                />
            <Grid
                ColumnSpacing="5"
                RowSpacing="5"
                x:Name="Field"
                AbsoluteLayout.LayoutBounds="0.5, 0.4, 280, 280"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                >
            </Grid>
            <Button
                x:Name="TurnButton"
                BackgroundColor="#36954B"
                CornerRadius="12"
                Text="make turn"
                FontSize="20"
                TextColor="WhiteSmoke"
                AbsoluteLayout.LayoutBounds="0.5, 0.82, 0.7, 0.1"
                AbsoluteLayout.LayoutFlags="All"
                Pressed="Turn_Button_Pressed"
                />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>